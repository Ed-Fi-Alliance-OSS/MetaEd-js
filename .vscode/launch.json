{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest :: File",
      "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
      "args": [
        "--runTestsByPath",
        "${relativeFile}",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "MetaEd console using metaed.json.example2",
      "program": "${workspaceRoot}/packages/metaed-console/dist/index.js",
      "args": [
        "-a",
        "-c",
        "${workspaceRoot}/packages/metaed-console/src/metaed.json.example2"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
}
