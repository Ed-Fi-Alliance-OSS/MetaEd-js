// MetaEd Recommended Settings
{
  // ESlint
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript"
  ],

  // Prettier
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": true,
  "editor.rulers": [125],

  // TypeScript
  "typescript.tsdk": "./node_modules/typescript/lib",

  // NPM
  "npm.packageManager": "yarn",
  "npm.enableScriptExplorer": true,

  // File Explorer
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": true,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/dist": true,
    "**/node_modules": true,
    "**/.vscode": true
  },
  "cSpell.words": [
    "metaed"
  ],
}
