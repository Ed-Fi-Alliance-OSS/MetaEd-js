{
  "name": "metaed-js",
  "description": "MetaEd for JavaScript",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "8.2.5",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "2.6.1",
    "flow-bin": "0.75.0",
    "flow-copy-source": "2.0.1",
    "flow-typed": "^2.1.5",
    "jest": "23.3.0",
    "jest-teamcity-reporter": "^0.9.0",
    "lerna": "^2.9.0",
    "prettier": "1.13.7",
    "rimraf": "^2.6.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "metaed:build": "node ./packages/metaed-console/dist/index.js",
    "metaed:deploy": "node ./packages/metaed-odsapi-deploy/dist/index.js",
    "lint": "eslint .",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --parallel",
    "build:clean": "lerna run build:clean --parallel",
    "test": "yarn test:flow && yarn test:lint && yarn test:unit && yarn test:atom",
    "test:coverage": "rimraf coverage/ && jest --coverage",
    "test:lint": "yarn lint",
    "test:flow": "yarn flow check",
    "test:unit": "yarn build:clean && yarn test:unit:non-ods && yarn test:unit:ods-non-db",
    "test:unit:non-ods": "yarn jest packages/(?!metaed-plugin-edfi-ods)",
    "test:unit:ods-non-db": "yarn jest packages/metaed-plugin-edfi-ods/test/(?!database)",
    "test:unit:ods-db": "yarn jest packages/metaed-plugin-edfi-ods/test/database -i",
    "test:unit:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:atom": "yarn workspace atom-metaed test",
    "prep-for-publish": "yarn build:clean && yarn test && yarn test:unit:ods-db && yarn build",
    "publish-dev": "yarn lerna publish --exact --conventional-commits --cd-version prerelease --preid=dev --npm-tag=dev --yes --force-publish=* --npm-client=npm"
  }
}
