{
  "name": "metaed-js",
  "description": "MetaEd for JavaScript",
  "private": true,
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@types/node": "12.0.2",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "copyfiles": "^2.1.0",
    "documentation": "8.1.2",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-config-typescript": "2.0.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-json": "1.4.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "^2.3.0",
    "jest": "24.8.0",
    "jest-teamcity-reporter": "^0.9.0",
    "jsinspect": "^0.12.7",
    "lerna": "^3.1.4",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "typescript": "3.4.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run test:pre-push"
    }
  },
  "scripts": {
    "antlr-gen": "java -jar ./antlr/antlr-4.6-complete.jar -Dlanguage=JavaScript -o ./packages/metaed-core/src/grammar/gen ./packages/metaed-core/src/grammar/language/BaseLexer.g4 ./packages/metaed-core/src/grammar/language/MetaEdGrammar.g4",
    "doc-gen": "npx rimraf docs/ && npx documentation build packages/metaed-core/src/** --sort-order alpha -f html -o docs",
    "metaed:build": "node ./packages/metaed-console/dist/index.js",
    "metaed:deploy": "node ./packages/metaed-odsapi-deploy/dist/index.js",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "test": "npm run build:clean && npm run test:lint && npm run test:unit && npm run test:unit:ods-db",
    "test:pre-push": "npm run build:clean && npm run test:lint",
    "test:coverage": "rimraf coverage/ && jest --coverage",
    "test:lint": "npm run test:lint:ts && npm run test:lint:eslint",
    "test:lint:eslint": "eslint --ext .js,.ts .",
    "test:lint:ts": "tsc -p . --noEmit",
    "test:unit": "npm run test:unit:non-ods-prefixed && npm run test:unit:odsapi && npm run test:unit:ods-changequery && npm run test:unit:ods-non-db",
    "test:unit:non-ods-prefixed": "npx jest \"packages/(?!metaed-plugin-edfi-ods)\"",
    "test:unit:odsapi": "npx jest packages/metaed-plugin-edfi-odsapi/test",
    "test:unit:ods-changequery": "npx jest packages/metaed-plugin-edfi-ods-changequery/test",
    "test:unit:ods-non-db": "npx jest \"packages/metaed-plugin-edfi-ods/test/(?!database)\"",
    "test:unit:ods-db": "npx ts-node packages/metaed-plugin-edfi-ods/test/database/InitializeOdsIntegrationTestDatabase.ts && npx jest packages/metaed-plugin-edfi-ods/test/database -i",
    "test:unit:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:code-duplication": "npx jsinspect -t 50 --ignore \"test|gen|dist\" ./packages",
    "prep-for-publish": "npm test && npm run build",
    "publish-dev": "npx lerna publish prerelease --exact --conventional-commits --preid=dev --dist-tag=dev --yes --force-publish=* --npm-client=npm --no-verify-access"
  }
}
