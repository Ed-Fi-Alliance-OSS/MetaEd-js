{
  "name": "metaed-js",
  "description": "MetaEd for JavaScript",
  "private": true,
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "documentation": "8.1.2",
    "eslint": "8.6.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-typescript": "3.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^2.7.0",
    "jest": "27.4.7",
    "jest-teamcity-reporter": "^0.9.0",
    "jsinspect": "^0.12.7",
    "lerna": "^3.22.1",
    "pgtools": "^0.3.2",
    "prettier": "2.5.1",
    "rimraf": "^2.7.1",
    "ts-jest": "27.1.2",
    "ts-node": "8.10.2",
    "typescript": "4.5.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn test:pre-push"
    }
  },
  "scripts": {
    "antlr-gen": "java -jar ./antlr/antlr-4.6-complete.jar -Dlanguage=JavaScript -o ./packages/metaed-core/src/grammar/gen ./packages/metaed-core/src/grammar/language/BaseLexer.g4 ./packages/metaed-core/src/grammar/language/MetaEdGrammar.g4",
    "doc-gen": "yarn rimraf docs/ && yarn documentation build packages/metaed-core/src/** --sort-order alpha -f html -o docs",
    "metaed:build": "node ./packages/metaed-console/dist/index.js",
    "metaed:deploy": "node ./packages/metaed-odsapi-deploy/dist/index.js",
    "build": "lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "test": "yarn build:clean && yarn test:lint && yarn test:unit && yarn test:unit:ods-sqlserver && yarn test:atom",
    "test:pre-push": "yarn build:clean && yarn test:lint",
    "test:coverage": "rimraf coverage/ && jest --coverage",
    "test:lint": "yarn test:lint:ts && yarn test:lint:eslint",
    "test:lint:eslint": "eslint --max-warnings 0 --ext .js,.ts .",
    "test:lint:ts": "tsc -p . --noEmit",
    "test:unit": "cross-env NODE_OPTIONS=--max-old-space-size=4096 yarn test:unit:unified && yarn test:unit:ods:everything-else && yarn test:unit:everything-else && yarn test:unit:ods-postgresql:non-db",
    "test:unit:unified": "yarn jest packages/metaed-plugin-edfi-unified",
    "test:unit:ods-sqlserver": "yarn ts-node packages/metaed-plugin-edfi-ods-sqlserver/test/database/InitializeOdsIntegrationTestDatabase.ts && yarn jest packages/metaed-plugin-edfi-ods-sqlserver -i",
    "test:unit:ods-sqlserver:db": "jest packages/metaed-plugin-edfi-ods-sqlserver/test/database -i",
    "test:unit:ods-sqlserver:non-db": "jest \"packages/metaed-plugin-edfi-ods-sqlserver/test/(enhancer|generator|integration|diminisher)\"",
    "test:unit:ods-postgresql:db": "jest packages/metaed-plugin-edfi-ods-postgresql/test/database -i",
    "test:unit:ods-postgresql:non-db": "jest \"packages/metaed-plugin-edfi-ods-postgresql/test/(enhancer|generator|integration)\"",
    "test:unit:ods-postgresql:setup-db": "yarn dropdbjs metaed_integration_tests --password=docker && yarn createdbjs metaed_integration_tests --password=docker && psql -d metaed_integration_tests -U postgres",
    "test:unit:ods:everything-else": "yarn jest \"packages/(?!metaed-plugin-edfi-ods-sqlserver|metaed-plugin-edfi-ods-postgresql)(metaed-plugin-edfi-ods)\"",
    "test:unit:everything-else": "yarn jest \"packages/(?!metaed-plugin-edfi-ods|metaed-plugin-edfi-unified)\"",
    "test:unit:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:atom": "yarn workspace atom-metaed test",
    "test:code-duplication": "yarn jsinspect -t 50 --ignore \"test|gen|dist\" ./packages",
    "prep-for-publish": "yarn test && yarn build",
    "publish-all": "yarn lerna exec --no-private npm publish",
    "version:dev": "yarn lerna version prerelease --conventional-commits --exact --force-publish=* --no-push --no-verify-access --npm-client=npm --sign-git-commit --yes --preid=dev --dist-tag=dev",
    "version:patch": "yarn lerna version patch      --conventional-commits --exact --force-publish=* --no-push --no-verify-access --npm-client=npm --sign-git-commit --yes",
    "version:minor": "yarn lerna version minor      --conventional-commits --exact --force-publish=* --no-push --no-verify-access --npm-client=npm --sign-git-commit --yes",
    "version:major": "yarn lerna version major      --conventional-commits --exact --force-publish=* --no-push --no-verify-access --npm-client=npm --sign-git-commit --yes"
  },
  "packageManager": "yarn@3.1.1"
}
