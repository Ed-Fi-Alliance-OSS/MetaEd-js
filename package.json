{
  "name": "metaed-js",
  "description": "MetaEd for JavaScript",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "copyfiles": "^2.1.0",
    "documentation": "8.1.2",
    "eslint": "5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-typescript": "^1.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-json": "^1.3.2",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-typescript": "^1.0.0-rc.2",
    "jest": "^23.5.0",
    "jest-teamcity-reporter": "^0.9.0",
    "jsinspect": "^0.12.7",
    "lerna": "^3.1.4",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "3.1.6",
    "typescript-eslint-parser": "^21.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "antlr-gen": "java -jar ./antlr/antlr-4.6-complete.jar -Dlanguage=JavaScript -o ./packages/metaed-core/src/grammar/gen ./packages/metaed-core/src/grammar/language/BaseLexer.g4 ./packages/metaed-core/src/grammar/language/MetaEdGrammar.g4",
    "doc-gen": "yarn rimraf docs/ && yarn documentation build packages/metaed-core/src/** --sort-order alpha -f html -o docs",
    "metaed:build": "node ./packages/metaed-console/dist/index.js",
    "metaed:deploy": "node ./packages/metaed-odsapi-deploy/dist/index.js",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "test": "yarn build:clean && yarn test:lint && yarn test:unit && yarn test:unit:ods-db && yarn test:atom",
    "test:coverage": "rimraf coverage/ && jest --coverage",
    "test:lint": "yarn test:ts && yarn test:eslint",
    "test:eslint": "eslint --ext .js,.ts .",
    "test:ts": "tsc -p . --noEmit",
    "test:unit": "yarn test:unit:non-ods-prefixed && yarn test:unit:odsapi && yarn test:unit:ods-changequery && yarn test:unit:ods-non-db",
    "test:unit:non-ods-prefixed": "yarn jest \"packages/(?!metaed-plugin-edfi-ods)\"",
    "test:unit:odsapi": "yarn jest packages/metaed-plugin-edfi-odsapi/test",
    "test:unit:ods-changequery": "yarn jest packages/metaed-plugin-edfi-ods-changequery/test",
    "test:unit:ods-non-db": "yarn jest \"packages/metaed-plugin-edfi-ods/test/(?!database)\"",
    "test:unit:ods-db": "yarn jest packages/metaed-plugin-edfi-ods/test/database -i",
    "test:unit:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:atom": "yarn workspace atom-metaed test",
    "test:code-duplication": "yarn jsinspect -t 50 --ignore \"test|gen|dist\" ./packages",
    "prep-for-publish": "yarn test && yarn build",
    "publish-dev": "yarn lerna publish prerelease --exact --conventional-commits --preid=dev --dist-tag=dev --yes --force-publish=* --npm-client=npm --no-verify-access"
  }
}
