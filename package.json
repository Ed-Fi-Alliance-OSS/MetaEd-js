{
  "name": "metaed-js",
  "description": "MetaEd for JavaScript",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "8.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.74.0",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.1.5",
    "jest": "23.1.0",
    "jest-teamcity-reporter": "^0.9.0",
    "lerna": "^2.9.0",
    "prettier": "^1.13.4",
    "rimraf": "^2.6.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "metaed:build": "node ./packages/metaed-console/dist/index.js",
    "metaed:deploy": "node ./packages/metaed-odsapi-deploy/dist/index.js",
    "lint": "eslint .",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --parallel",
    "build:clean": "lerna run build:clean --parallel",
    "test": "yarn test:flow && yarn test:lint && yarn test:unit && yarn test:atom",
    "test:coverage": "rimraf coverage/ && jest --coverage",
    "test:lint": "yarn lint",
    "test:flow": "yarn flow check",
    "test:unit": "yarn build:clean && yarn test:unit:workaround-memory-leak",
    "test:unit:workaround-memory-leak": "jest packages/metaed-core/ && jest packages/metaed-plugin-edfi-interchange-brief/ && jest packages/metaed-plugin-edfi-unified/ && jest packages/metaed-plugin-edfi-xml-dictionary/ && jest packages/metaed-plugin-edfi-xsd/ && jest packages/metaed-plugin-edfi-odsapi/ && jest packages/metaed-plugin-edfi-ods/ -i",
    "test:unit:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:atom": "yarn workspace atom-metaed test",
    "prep-for-publish": "yarn build:clean && yarn test && yarn build",
    "publish-dev": "yarn lerna publish --exact --conventional-commits --cd-version prerelease --preid=dev --npm-tag=dev --yes --force-publish=* --npm-client=npm"
  }
}
