{
	"name": "vscode-metaed",
	"displayName": "MetaEd for VS Code",
	"description": "MetaEd for VS Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.metaed.build"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.metaed.build",
			"title": "Build MetaEd"
		}]
	},
	"scripts": {
		"vscode:prepublish": "yarn workspace vscode-metaed build",
		"build": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn workspace vscode-metaed compile",
		"test": "node ./dist/test/runTest.js"
	},
	"dependencies": {
		"fs-extra": "^3.0.1",
		"metaed-core": "2.1.2",
		"tmp-promise": "^1.0.4"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
