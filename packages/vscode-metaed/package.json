{
	"name": "vscode-metaed",
	"displayName": "MetaEd for VS Code",
	"description": "MetaEd for VS Code",
	"version": "2.1.2",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:metaed.build",
		"onCommand:metaed.about"
	],
	"main": "./dist/metaed.js",
	"contributes": {
		"commands": [
			{
			  "command": "metaed.build",
			  "title": "Build",
			  "category": "MetaEd"
			},
			{
			  "command": "metaed.about",
			  "title": "About",
			  "category": "MetaEd"
			}
		],
		"menus": {
      "editor/title": [
        {
          "command": "metaed.build",
          "group": "navigation"
				},
				{
          "command": "metaed.about",
          "group": "navigation"
        }
      ]
    }
	},
	"scripts": {
		"vscode:prepublish": "yarn workspace vscode-metaed build",
		"build": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn workspace vscode-metaed compile",
		"test": "node ./dist/test/runTest.js"
	},
	"dependencies": {
		"fs-extra": "^3.0.1",
		"metaed-core": "2.1.2",
		"ramda": "^0.25.0",
		"semver": "^5.5.0",
		"tmp-promise": "^1.0.4"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
