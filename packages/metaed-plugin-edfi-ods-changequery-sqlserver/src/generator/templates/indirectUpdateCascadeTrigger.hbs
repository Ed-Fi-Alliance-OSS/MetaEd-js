{{#triggers}}
DROP TRIGGER IF EXISTS [{{{subTableSchema}}}].[{{{subTableSchema}}}_{{{subTableNameCasePreserved}}}_TR_{{{mainTableNameCasePreserved}}}_Update]
GO

CREATE TRIGGER [{{{subTableSchema}}}].[{{{subTableSchema}}}_{{{subTableNameCasePreserved}}}_TR_{{{mainTableNameCasePreserved}}}_Update]
ON [{{{subTableSchema}}}].[{{{subTableNameCasePreserved}}}]
AFTER UPDATE
AS
BEGIN
    SET NOCOUNT ON;

    -- Check if any volatile foreign key values have changed
    IF {{#checkForUpdateColumnNames}}UPDATE({{{this}}}){{#unless @last}}
       OR {{/unless}}{{/checkForUpdateColumnNames}}
    BEGIN
        -- Update the LastModifiedDate in the root table to the current UTC time
        UPDATE rt
        SET rt.LastModifiedDate = GETUTCDATE()
        FROM [{{{mainTableSchema}}}].[{{{mainTableNameCasePreserved}}}] rt
        INNER JOIN inserted i
            ON {{#fkToMainTableColumnNames}}rt.{{{foreignTableColumnName}}} = i.{{{parentTableColumnName}}}{{#unless @last}}
               AND {{/unless}}{{/fkToMainTableColumnNames}};
    END
END;
GO

